<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Verifyphonenumber">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Verify Phone"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Code is sent to"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/textView6"
        app:layout_constraintHorizontal_bias="0.542"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="280dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/editTextText8"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:background="@drawable/otpedittext"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold"
            android:maxLength="1"
            android:inputType="number" />

        <EditText
            android:id="@+id/editTextText9"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginStart="6dp"
            android:layout_weight="1"
            android:background="@drawable/otpedittext"
            android:textAlignment="center"
            android:maxLength="1"
            android:textSize="16sp"
            android:textStyle="bold"
            android:inputType="number" />

        <EditText
            android:id="@+id/editTextText10"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginStart="6dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/otpedittext"

            android:maxLength="1"
            android:inputType="number" />

        <EditText
            android:id="@+id/editTextText11"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginStart="6dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/otpedittext"
            android:maxLength="1"
            android:inputType="number" />

        <EditText
            android:id="@+id/editTextText12"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginStart="6dp"
            android:layout_weight="1"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/otpedittext"
            android:ems="10"
            android:maxLength="1"
            android:textAlignment="center"
            android:inputType="number" />

        <EditText
            android:id="@+id/editTextText13"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginStart="6dp"
            android:layout_weight="1"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/otpedittext"
            android:textAlignment="center"
            android:maxLength="1"
            android:inputType="number" />
    </LinearLayout>

    <TextView
        android:id="@+id/mobilenumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="mobilenumber"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.051"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Did'nt recieve a code?"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.235"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintVertical_bias="0.033" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="288dp"
        android:text="Requestion Again"
        android:textStyle="normal|bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.051"
        app:layout_constraintStart_toEndOf="@+id/textView11"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintVertical_bias="0.092" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/verifybutton"
        android:layout_width="380dp"
        android:background="#2196F3"
        android:layout_height="wrap_content"
        android:layout_marginBottom="356dp"
        android:text="Verify and continue"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>